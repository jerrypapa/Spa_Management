@model IEnumerable<Spa_Management.Models.EmployeePay>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GrossPay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommisionPerJob)
                </th>
