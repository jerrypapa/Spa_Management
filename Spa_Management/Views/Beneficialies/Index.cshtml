@model IEnumerable<Spa_Management.Models.tbBeneficialies>

@{
    ViewData["Title"] = "Index";
}
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="col-sm-12 col-md-9 col-lg-12">
                    <div class="panel panel-info ">
                        <div class="panel-heading "><h4>Beneficiaries</h4></div>
                        <div class="panel-body">
                            <p>
                                <a asp-action="Create">Add New</a>
                            </p>
                            <table id="example1" class="table table-responsive table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SirName)
                                        </th>
                                        @*<th>
                                            @Html.DisplayNameFor(model => model.FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LastName)
                                        </th>*@
                                        <th>
                                            @Html.DisplayNameFor(model => model.contact)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.physicalLoc)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.adrress)
                                        </th>
                                        @*<th>
                        @Html.DisplayNameFor(model => model.tbIndivuduals)
                    </th>*@
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SirName)
                                            </td>
                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.contact)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.physicalLoc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.adrress)
                                            </td>

                                            <td>
                                                @if (User.IsInRole("Individual"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.benGuid">Edit</a> @*|
                                < a asp - action = "Details" asp - route - id = "@item.benGuid" > Details </ a > |

                                < a asp - action = "Delete" asp - route - id = "@item.benGuid" > Delete </ a >*@
                                                }
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $("#example1").DataTable(
            {
                "ordering": false
            }
        );

    });
</script>
