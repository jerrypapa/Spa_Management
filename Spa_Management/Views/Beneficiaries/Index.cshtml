@model IEnumerable<Spa_Management.Models.tbBeneficiaries>

@{
    ViewData["Title"] = "Index";
}

    <div class="panel panel-info ">
        <div class="panel-heading "><h4>Beneficiaries</h4></div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr>
                        @*<th>
                            @Html.DisplayNameFor(model => model.registeredBy)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.InstitutionName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.pysicalLoc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.postalAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.contact)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.regDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.registeredBy)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.InstitutionName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pysicalLoc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postalAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.regDate)
                            </td>
                            <td>
                                @if (item.status == 0)
                                {
                                    <button class="btn btn-block btn-info btn-xs">InActive</button>
                                }
                                else if (item.status == 1)
                                {
                                    <button class="btn btn-block btn-success btn-xs">Active</button>
                                }
                                else if (item.status == 2)
                                {
                                    <button class="btn btn-block btn-warning btn-xs">Rejected</button>
                                }
                            </td>
                            @if (User.IsInRole("BenericiaryAdmin"))
                            {
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.institutionGuid">Edit</a> |
                                </td>
                            }
                            <td>
                                @*<a asp-action="Users" asp-route-id="@item.institutionGuid">Users</a> |*@
                                <a asp-action="Details" asp-route-id="@item.institutionGuid">Details</a> |
                                @*<a asp-action="Directors" asp-route-id="@item.institutionGuid">Directors</a>*@
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>