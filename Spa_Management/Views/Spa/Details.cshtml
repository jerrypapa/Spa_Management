@model Spa_Management.Controllers.SpaController.SpaBusinessDetails

@{
    ViewData["Title"] = "Details";
}

<div class="panel panel-info ">
    <div class="panel-heading "><h4>Spa Details Details</h4></div>
    <div class="panel-body">
        <div class="text-danger"><label> @ViewBag.SpaDetails</label></div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <table class="table table-hover table-responsive ">
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.appliedby)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.appliedby)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.ApplicantAddress)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ApplicantAddress)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.Contact)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Contact)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.spaDetails.spaName)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.spaDetails.spaName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.spaDetails.pysicalLoc)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.spaDetails.pysicalLoc)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.spaDetails.postalAddress)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.spaDetails.postalAddress)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.spaDetails.contact)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.spaDetails.contact)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.spaDetails.RegCertNo)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.spaDetails.RegCertNo)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.spaDetails.PinNo)</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.spaDetails.PinNo)
                    </td>
                </tr>


                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.spaDetails.status)</b>
                    </td>
                    <td>

                        @if ((int)ViewBag.State0 == 0)
                        {
                            <button class="btn btn-block btn-default btn-xs">Unverified</button>

                        }
                        else if ((int)ViewBag.State0 == 1)
                        {
                            <button class="btn btn-block btn-info btn-xs">Verified</button>

                        }
                        else if ((int)ViewBag.State0 == 2)
                        {
                            <button class="btn btn-block btn-danger btn-xs">Rejected</button>

                        }

                    </td>
                </tr>


            </table>
        </div>

    </div>
    @if (User.IsInRole("MasterAdmin"))
    {
        <div class="panel panel-primary ">
            <div class="panel-heading "><h4>Business CRB Details</h4></div>

            <div class="panel-body">
                <div class="text-danger"><label>@ViewBag.SpaDetails</label></div>
                @*<p>Tutaziweka Hapa Sasa</p>*@
                <table class="table table-responsive table-striped">
                    <tr>
                        <th>Check Date</th>
                        <th>Score</th>
                        <th>Details</th>
                        <th>Trend</th>
                        <th></th>
                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.crb.date)</td>

                        <td>@Html.DisplayFor(model => model.crb.score)</td>

                        <td>@Html.DisplayFor(model => model.crb.inComeDetails) </td>

                        <td>@Html.DisplayFor(model => model.crb.details) </td>


                        <td>
                            <a asp-action="CRBDetails" asp-route-id="@ViewBag.Gui">Details</a>
                        </td>

                    </tr>
                </table>
                @if ((int)ViewBag.State0 == 0)
                {
                    <div class="pull-right">
                        <p>
                            <a asp-action="CRBRefresh" asp-route-id="@ViewBag.Gui">Check CRB</a>
                        </p>
                    </div>
                }
            </div>
        </div>
        
    }


</div>

