@model Spa_Management.Controllers.ViewcompanyDirectors
@{
    ViewData["Title"] = "Directors";
}


<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="panel panel-info ">
                    <div class="panel-heading "><h4>Company Directors - @ViewBag.CompanyName</h4></div>
                    <div class="panel-body">
                        <table id="example1" class="table table-bordered table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FirsName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TelephoneNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.idNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.status)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem =>modelItem.id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => modelItem.FirsName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => modelItem.TelephoneNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => modelItem.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => modelItem.idNumber)
                                        </td>
                                        <td>
                                            @if (Model.status== true)
                                            {
                                                <button class="btn btn-block btn-success btn-xs">Verified</button>

                                            }
                                            else
                                            {

                                                <button class="btn btn-block btn-danger btn-xs">Unverified</button>
                                            }
                                        </td>
                                    </tr>

                            </tbody>
                        </table>
                        @if (User.IsInRole("MasterAdmin"))
                        {
                            @if (Model.status==false)
                            {
                                <div class="panel panel-danger">
                                    <div class="panel-heading "><h4>Approve / Reject </h4></div>
                                    <div class="panel-body">
                                        <form asp-action="VerifyDirectors" method="post" asp-controller="Companies">
                                            <input type="hidden" name="compDirID" value="" />
                                            <div>
                                                <label>Comments</label>
                                                <textarea name="Details" class="form-control" placeholder="~ Please add Descriptive comments here ~"></textarea>
                                            </div>
                                            <div class="pull-right">
                                                <p>
                                                    <div class="row">
                                                        <table class="table">
                                                            <tr>
                                                                <td>
                                                                    <button class="btn btn-block btn-success btn-default" name="btn" value="Approve" type="submit">Approve</button>
                                                                </td>
                                                                <td>
                                                                    <button class="btn btn-block btn-danger btn-default" name="btn" value="Reject" type="submit">Reject</button>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                </p>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div>

                </div>
              
                <div>
                    <a asp-controller="Companies" asp-action="Details" asp-route-id="@ViewBag.Gui">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</section>

<script>
    $(function () {
        $("#example1").DataTable(
            {
                "ordering": false
            }
        );

    });
</script>



