@model IEnumerable<Spa_Management.Models.tbSMSLogs>

@{
    ViewData["Title"] = "Index";
}

@*<h2>Index</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>*@
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="panel panel-info ">
                    <div class="panel-heading "><h4>SMS Logs</h4></div>
                    <div class="panel-body">
                        <table id="example1" class="table-responsive-lg table-responsive-md table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.toPhone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.message)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.sentDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.status)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.toPhone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.message)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.sentDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.status)
                                        </td>
                                        <td>
                                            @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $("#example1").DataTable(
            {
                "ordering": false
            }
        );

    });
</script>

